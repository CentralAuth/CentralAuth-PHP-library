{
  "name": "centralauth/oauth2-centralauth",
  "description": "CentralAuth OAuth 2.0 provider for league/oauth2-client",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "oauth2",
    "centralauth",
    "authentication",
    "sso"
  ],
  "require": {
    "php": ">=7.4",
    "league/oauth2-client": "^2.8"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5 || ^10.0",
    "mockery/mockery": "^1.4",
    "guzzlehttp/psr7": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "CentralAuth\\OAuth2\\Client\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "CentralAuth\\OAuth2\\Client\\Test\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --no-coverage",
    "test-coverage": "@php -r \"if (!extension_loaded('xdebug') && !extension_loaded('pcov')) { echo 'Code coverage requires Xdebug or PCOV extension. Install with: sudo apt-get install php-xdebug\\n'; exit(1); }\" && phpunit --coverage-html coverage",
    "test-unit": "phpunit --testsuite \"Unit Tests\" --no-coverage",
    "test-integration": "phpunit --testsuite \"Integration Tests\" --no-coverage"
  }
}